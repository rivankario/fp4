<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7.5dp"
        android:paddingTop="10dp"
        android:paddingRight="7.5dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/fromWhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/backButton"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/backButton"
            android:text="location"
            android:textColor="@color/white"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/backButton"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/fromWhere"
            android:text="to"
            android:textColor="@color/white"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/toWhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/backButton"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/middle"
            android:text="location"
            android:textColor="@color/white"
            android:textSize="8pt" />

        <ImageButton
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/filterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Filter"
            android:textColor="@color/white"
            android:textSize="7pt" />

        <ImageView
            android:id="@+id/dropMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:layout_toLeftOf="@id/filterText"
            android:src="@drawable/ic_baseline_arrow_drop_down_24" />

        <TextView
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/filterText"
            android:layout_toLeftOf="@id/dropMenu"
            android:text="Filter"
            android:textColor="@color/white"
            android:textSize="7pt" />
    </RelativeLayout>
